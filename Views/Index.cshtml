@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/_Layout.cshtml";
}

<div style="text-align:center; margin-top:50px;">
    <h1 style="font-size:2.5rem; color:#1E3A8A; margin-bottom:20px;">
         Workspace Booking & Billing System
    </h1>
    <p style="font-size:1.25rem; color:#374151; margin-bottom:30px;">
        Seamlessly manage your workspaces, bookings, and billing — all in one place.
    </p>
    <p style="font-size:1rem; color:#6B7280;">
        Start by logging in to access protected APIs.
    </p>
    <!-- Login Button -->
    <a href="/Account/Login" 
       style="display:inline-block; margin-top:20px; padding:12px 30px; background-color:#3B82F6; color:white; font-weight:bold; border-radius:8px; text-decoration:none; transition:background-color 0.3s;"
       onmouseover="this.style.backgroundColor='#2563EB'" 
       onmouseout="this.style.backgroundColor='#3B82F6'">
        Login
    </a>
</div>
